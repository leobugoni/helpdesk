<div class="container-fluid row">
  <div class="col-sm-4 col-md-4 col-lg-4">&nbsp;</div>  
  <div class="col-sm-4 col-md-4 col-lg-4">
    <%= form_for @user do |f| %>
      <div class="field">
        <div class="col-sm-12 col-md-12 col-lg-12 ">&nbsp;</div>        
        <%= f.label :nome, class: "control-label"%>
        <%= f.text_field :nome, class: "form-control"%>
      </div>
      <div class="field">
        <div class="col-sm-12 col-md-12 col-lg-12">&nbsp;</div>        
        <%= f.label :email, class: "control-label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
      <div class="field">
        <div class="col-sm-12 col-md-12 col-lg-12">&nbsp;</div>        
        <%= f.label :password, class: "control-label" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="field">
        <div class="col-sm-12 col-md-12 col-lg-12">&nbsp;</div>        
        <%= f.label :password_confirmation, class: "control-label" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      <div class="actions">
        <div class="col-sm-12 col-md-12 col-lg-12">&nbsp;</div> 
        <%= button_tag(type: 'submit', class: "btn btn-success") do %>
          <i class="icon material-icons md-18">save</i> Save
        <% end %>
        <%= link_to '<span class="btn btn-light"><i class="material-icons md-18">reply</i> Back</span>'.html_safe, users_path %>
      </div>
    <% end %>
    <div class="col-sm-12 col-md-12 col-lg-12">&nbsp;</div> 
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <ul class="list-group">
         <% @user.errors.full_messages.each do |msg| %>
         <li class="list-group-item list-group-item-danger"><%= msg %></li>
         <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="col-sm-4 col-md-4 col-lg-4">&nbsp;</div>
</div>




