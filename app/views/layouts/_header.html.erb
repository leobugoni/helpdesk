          </form>
        <% else %>
          <ul class="navbar-nav mr-auto">
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item active"><%= link_to "Log in", root_path, class: "nav-link" %></li>
            </ul>
          </form>
        <% end %>
        
       
      </div>
    </nav>
  </div>
