<header>
  <div>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="#"><i class="icon material-icons md-18">extension</i> HelpDesk</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <% if logged_in? %>
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <%= link_to "Users", users_path, class: "nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Profile", current_user, class: "nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Settings", edit_user_path(current_user), class: "nav-link"%>
            </li>
            <li class="nav-item">
              <%= link_to "Contacts", contatos_path, class: "nav-link"%>
            </li>
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item"><%= user_name %></li>
            </ul>
          </form>
          <form class="form-inline my-2 my-lg-0">
            <ul class="navbar-nav mr-auto">
              <%= link_to '<i class="icon material-icons md-18">exit_to_app</i> Log out'.html_safe, sign_out_path, method: "delete", class: "nav-link" %>
            </ul>
          </form>
        <% else %>
          <ul class="navbar-nav mr-auto">
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <ul class="navbar-nav mr-auto">
              <%= link_to '<i class="icon material-icons md-18">input</i> Sign in'.html_safe, root_path, class: "nav-link" %>
            </ul>
          </form>
        <% end %>
      </div>
    </nav>
  </div>
</header>